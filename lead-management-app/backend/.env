# Environment Configuration
# Copy this to .env and replace with your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration  
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017/lead_management

# For MongoDB Atlas (replace with your connection string):
# 1. Sign up at https://www.mongodb.com/cloud/atlas
# 2. Create a free cluster
# 3. Create a database user
# 4. Get your connection string and replace below:
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/lead_management?retryWrites=true&w=majority

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100